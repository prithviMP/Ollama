# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro
GOOGLE_TEMPERATURE=0.7

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7

# OpenRouter Configuration (Access to multiple models including DeepSeek)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=deepseek/deepseek-chat
OPENROUTER_TEMPERATURE=0.7

# Ollama Configuration (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# General Settings
MAX_TOKENS=2000
VERBOSE=True

# Document Processing Settings
DOCUMENTS_DIRECTORY=./documents
PROCESSED_DOCUMENTS_DIRECTORY=./processed_documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,txt,docx,pptx,xlsx,html,csv,json

# Text Splitting Settings
RECURSIVE_CHUNK_SIZE=1000
RECURSIVE_CHUNK_OVERLAP=200
TOKEN_CHUNK_SIZE=512
SEMANTIC_CHUNK_MIN_SIZE=100
SEMANTIC_CHUNK_MAX_SIZE=2000

# Web Scraping Settings
WEB_REQUEST_TIMEOUT=30
MAX_WEB_PAGES=10
USER_AGENT=LangChain-DocumentProcessor/1.0

# Processing Pipeline Settings
BATCH_SIZE=10
MAX_WORKERS=4
ENABLE_PARALLEL_PROCESSING=True
ENABLE_CONTENT_VALIDATION=True
MIN_CONTENT_LENGTH=50

# Optional: Hugging Face for embeddings and NLP
HF_TOKEN=your_hugging_face_token_here 