# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.0-flash
GOOGLE_TEMPERATURE=0.7

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Ollama Configuration (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.7

# Embedding Models Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Vector Store Configuration - Chroma
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=documents

# Vector Store Configuration - FAISS
FAISS_INDEX_PATH=./faiss_index
FAISS_DIMENSION=1536

# Vector Store Configuration - Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=langchain-demo

# Vector Store Configuration - Weaviate
WEAVIATE_URL=your_weaviate_url
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_CLASS_NAME=Document

# Vector Store Configuration - Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=documents

# Performance Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BATCH_SIZE=100
MAX_WORKERS=4
VERBOSE=True

# Search Configuration
DEFAULT_K=5
SIMILARITY_THRESHOLD=0.7
MAX_MARGINAL_RELEVANCE=True
LAMBDA_MULT=0.5

# Evaluation Settings
ENABLE_BENCHMARKING=True
BENCHMARK_ITERATIONS=10
RANDOM_SEED=42

# Optional: Azure OpenAI (if using Azure instead of OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name