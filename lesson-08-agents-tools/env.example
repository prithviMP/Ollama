# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.0

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.0-flash
GOOGLE_TEMPERATURE=0.0

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Ollama Configuration (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.0

# Agent Configuration
MAX_ITERATIONS=10
MAX_EXECUTION_TIME=300
AGENT_MEMORY_TYPE=buffer
AGENT_VERBOSE=True
ENABLE_HUMAN_FEEDBACK=False

# Tool Configuration - Search
SERPAPI_API_KEY=your_serpapi_key_here
GOOGLE_CSE_ID=your_google_cse_id
GOOGLE_API_KEY_SEARCH=your_google_api_key_for_search
DUCKDUCKGO_MAX_RESULTS=5
WIKIPEDIA_MAX_RESULTS=3

# Tool Configuration - External APIs
WEATHER_API_KEY=your_weather_api_key_here
NEWS_API_KEY=your_news_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
RAPID_API_KEY=your_rapid_api_key_here

# Tool Configuration - Databases
DATABASE_URL=sqlite:///agents.db
REDIS_URL=redis://localhost:6379/0
POSTGRES_URL=postgresql://user:password@localhost:5432/agents

# Safety and Security
ENABLE_SAFETY_CHECKS=True
MAX_COST_PER_SESSION=10.00
ALLOWED_DOMAINS=["safe-domain.com", "trusted-api.com"]
BLOCKED_KEYWORDS=["dangerous", "harmful", "illegal"]
ENABLE_CONTENT_FILTERING=True

# Code Execution
ENABLE_CODE_EXECUTION=False
CODE_EXECUTION_TIMEOUT=30
PYTHON_PATH=/usr/bin/python3
ALLOWED_IMPORTS=["math", "datetime", "json", "re"]
SANDBOX_MODE=True

# File System Access
ENABLE_FILE_ACCESS=False
ALLOWED_FILE_EXTENSIONS=[".txt", ".json", ".csv", ".md"]
MAX_FILE_SIZE=10485760  # 10MB
WORKSPACE_DIRECTORY=./agent_workspace

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_PROMETHEUS_METRICS=False
PROMETHEUS_PORT=8000
LOG_FORMAT=json
ENABLE_TRACE_LOGGING=True

# Multi-Agent Configuration
ENABLE_MULTI_AGENT=True
MAX_CONCURRENT_AGENTS=5
AGENT_COMMUNICATION_TIMEOUT=60
SHARED_MEMORY_SIZE=1000

# Human-in-the-Loop
HUMAN_APPROVAL_REQUIRED=False
HUMAN_TIMEOUT_SECONDS=300
ESCALATION_THRESHOLD=3
NOTIFICATION_WEBHOOK_URL=your_webhook_url_here

# Cost Management
DAILY_COST_LIMIT=100.00
WARN_COST_THRESHOLD=0.80
COST_TRACKING_ENABLED=True
COST_ALERTS_EMAIL=admin@yourcompany.com

# Rate Limiting
REQUESTS_PER_MINUTE=60
BURST_LIMIT=10
RATE_LIMIT_ENABLED=True

# Caching
ENABLE_RESPONSE_CACHE=True
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
REDIS_CACHE_PREFIX=agent_cache:

# Development Settings
DEBUG_MODE=False
DEVELOPMENT_MODE=True
MOCK_EXTERNAL_APIS=False
SAVE_INTERMEDIATE_RESULTS=True

# LangSmith (optional - for tracing and monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=agents-tools-lesson